<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>Controller.registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>volunteerLogin</servlet-name>
        <servlet-class>Controller.volunteerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisasterDetailsDB</servlet-name>
        <servlet-class>Controller.DisasterDetailsDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>survivorDetails</servlet-name>
        <servlet-class>Controller.survivorDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deadDetails</servlet-name>
        <servlet-class>Controller.deadDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RcampDetails</servlet-name>
        <servlet-class>Controller.RcampDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAllDisasters</servlet-name>
        <servlet-class>MobileController.DisplayAllDisasters</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>volunteerLogin</servlet-name>
        <url-pattern>/volunteerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisasterDetailsDB</servlet-name>
        <url-pattern>/DisasterDetailsDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>survivorDetails</servlet-name>
        <url-pattern>/survivorDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deadDetails</servlet-name>
        <url-pattern>/deadDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RcampDetails</servlet-name>
        <url-pattern>/RcampDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAllDisasters</servlet-name>
        <url-pattern>/DisplayAllDisasters</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
